procedure TFormProductos.BitBtnGuardarClick(Sender: TObject);
var
  Save:Integer;
begin
  if BitBtnGuardar.Caption='&Guardar' then
    begin
      Save:=Application.MessageBox('¿Desea Guardar el registro?','¡Confirmando!',MB_YESNOCANCEL);
        if Save=IDYES then
          begin
            With datamoduleinventarios.DataModule1.FDQueryProducto do //Inserta el producto nuevo
              begin
                 sql.Clear;
                 Sql.Add('Insert into "CMSoftware"."Producto"(id_clave,descripcion,tipo_producto,linea,control,');
                 Sql.Add('unidad_ent,unidad_sal,factor_uni,unidad_emp,precio_lista,moneda,centro_costos,impuesto,');
                 Sql.Add('existencia,stock_min,stock_max,proveedor,promedio,ultimo_costo,cantidad_acumulada,monto_acum,');
                 Sql.Add('fecha_ult_com,observaciones,campolibre1,campolibre2,campolibre3,descrip_libre1,descrip_libre2,');
                 Sql.Add('descrip_libre3)values(:params0,:params1,:params2,:params3,:params4,:params5,:params6,:params7,:params8,');
                 Sql.Add(':params9,:params10,:params11,:params12,:params13,:params14,:params15,:params16,:params17,:params18,:params19)');

                 Params[0].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[1].AsString:=MemoDescripción.Text;
                    if RadioButtonProducto.Checked then


                 Params[2].AsInteger:=StrToInt(Edittiid_producto.Text);
                 Params[3].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[4].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[5].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[6].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[7].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[8].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[9].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[10].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[11].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[12].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[13].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[14].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[15].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[16].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[17].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[18].AsInteger:=StrToInt(Editid_producto.Text);
                 Params[19].AsInteger:=StrToInt(Editid_producto.Text);
              end;
          end;
    end;


end;

