begin
  TFormCatalogoProveedores.Create(Self).Show;
end;

procedure TFormCatalogoCompras.SpeedButtonAgregarClick(Sender: TObject);
begin
   FormAltacompra.Show;
   showMessage( RightStr(FormMAinMenu.StatusBarMainMenu.Panels[0].Text,2));
  { With datamodule1.fdQueryusuario do
   Begin
     Sql.Clear;
     Sql.Add('Select F.id_folioOC from "CMSoftware"."Folios" F,"CMSoftware"."Usuario" U where ');
     Sql.Add('F.num_folio=U.id_folioOC and U.id_usuario=:param1');


     Params[0].AsInteger:=FormMAinMenu.StatusBarMainMenu.Panels[0].Text;
     open;
   End;}
end;

procedure TFormCatalogoCompras.SpeedButtonSalirClick(Sender: TObject);
begin
  close;
end;

end.
